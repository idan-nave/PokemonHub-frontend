{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ES2024"
    ],
    "strict": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "composite": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "cypress/**/*",
    "cypress/support",
    "cypress/support/component.ts",
    "cypress.config.ts",
    "vite-env.d.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
}